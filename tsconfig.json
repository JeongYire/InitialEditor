{
    "compilerOptions": {
        "outDir": "./public/dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "sourceMap": true,
        // "emitDeclarationOnly": true,
        // "declaration": true,
        "moduleResolution": "node",
        "baseUrl": "./public",
        "paths": {
            "~/*": ["./*"]
        },        
        "typeRoots": ["node_modules/@types"],

    },
    "include": ["public/js/**/*"]
